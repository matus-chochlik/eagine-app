#!/bin/bash
#
source "$(dirname ${0})/build-pkg-cfg"
src_dir=$(realpath "@SRC_DIR@")
bin_dir=$(realpath "@BIN_DIR@")
pkg_dir=$(realpath "@PKG_DIR@")

mkdir -p "${pkg_dir}/usr"
pkg_prefix=$(realpath "@PKG_DIR@/usr")
lib_prefix="${pkg_prefix}/lib/@PKG_MULTIARCH@"
cmk_prefix="${lib_prefix}/cmake/EAGine"

mkdir -p "${pkg_dir}/DEBIAN"
mkdir -p "${pkg_prefix}/include"
mkdir -p "${lib_prefix}/eagine"
mkdir -p "${cmk_prefix}"

# ------------------------------------------------------------------------------
cp "${eagine_app_path}" \
   "${lib_prefix}/eagine/${eagine_app_name}"
# ------------------------------------------------------------------------------
cat "$(dirname ${0})/pkg-headers.txt" |\
tr ';' '\n' |\
while read abs_path
do
	rel_path=${abs_path#$(realpath "${src_dir}/include")/}
	mkdir -p $(dirname "${pkg_prefix}/include/${rel_path}")
	cp "${abs_path}" \
	   "${pkg_prefix}/include/${rel_path}"
done
# ------------------------------------------------------------------------------
mkdir -p "${cmk_prefix}"
cat << EOD > "${cmk_prefix}/EAGineAppConfig.cmake"
if(CMAKE_VERSION VERSION_LESS 3.16.0)
  message(
    FATAL_ERROR
    "This file relies on consumers using CMake 3.16.0 or greater."
  )
endif()

add_library(EAGine::App INTERFACE IMPORTED)

target_compile_definitions(
  EAGine::App INTERFACE EAGINE_APP_LIBRARY=1
)

set_target_properties(
  EAGine::App PROPERTIES
  INTERFACE_INCLUDE_DIRECTORIES "\${_IMPORT_PREFIX}/include"
)
set_target_properties(
  EAGine::App PROPERTIES
  INTERFACE_LINK_DIRECTORIES "\${_IMPORT_PREFIX}/lib/@PKG_MULTIARCH@/eagine"
)

target_link_libraries(
  EAGine::App
  INTERFACE
    "\${_IMPORT_PREFIX}/lib/@PKG_MULTIARCH@/eagine/${eagine_app_name}"
  	EAGine::Core
  	EAGine::Shapes
  	EAGine::EGLplus
  	EAGine::OGLplus
  	EAGine::OALplus
)
EOD
# ------------------------------------------------------------------------------
cat << EOD > "${cmk_prefix}/EAGineAppDeps.cmake"
set(EAGineAppDeps Core Shapes EGLplus OGLplus OALplus)
EOD
# ------------------------------------------------------------------------------
mkdir -p "${pkg_dir}/DEBIAN"
cat << EOD > "${pkg_dir}/DEBIAN/control"
Package: eagine-app-dev
Version: @PKG_VERSION@
Architecture: @PKG_ARCH@
Installed-Size: $(du -k -s ${pkg_dir} | cut -f1)
Depends: libegl-dev,libglew-dev,libglfw3-dev,libopenal-dev,libalut-dev,eagine-core-dev (>= @PKG_VERSION@),eagine-shapes-dev (>= @PKG_VERSION@),eagine-eglplus-dev (>= @PKG_VERSION@),eagine-oglplus-dev (>= @PKG_VERSION@),eagine-oalplus-dev (>= @PKG_VERSION@),eagine-app-dev (>= @PKG_VERSION@)
Maintainer: Matus Chochlik <chochlik@gmail.com>
Description: Collection of C++ libraries wrapping SSL, OpenGL, OpenAL and EGL including utilities for writing distributed applications with graphics and/or audio rendering. 
EOD
